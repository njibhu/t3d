{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "allowJs": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./types"]
    },
    "include": [
      "src/**/*",
      "examples/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }